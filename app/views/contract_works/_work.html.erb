<tr class="work <%= 'grouped' if work.work_group.present? %>" id="work-<%= work.id %>">
  <td class="position"><%= work.position %></td>
  <td class="name">
    <%= h work.name %>
    <% if work.work_group.present? %>
      <div class="group-info">
        <%= l(:label_group) %>: <%= work.work_group %>
        (<%= work.group_hours %>)
      </div>
    <% end %>
  </td>
  <td class="hours">
    <%= work.planned_hours if work.planned_hours.present? %>
  </td>
  <td class="issues">
    <%= work.issues.count %>
  </td>
  <td class="buttons">
    <%= link_to l(:button_edit),
                edit_version_contract_work_path(@version, work),
                remote: true,
                class: 'icon icon-edit' %>
    <%= link_to l(:button_delete),
                version_contract_work_path(@version, work),
                method: :delete,
                remote: true,
                class: 'icon icon-del',
                data: { confirm: l(:text_are_you_sure) } %>
  </td>
</tr>